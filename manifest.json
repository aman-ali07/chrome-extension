{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "version": "1.0.0",
  "description": "Minimal production-ready Chrome Extension (Manifest V3)",
  "permissions": [],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Chrome Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
